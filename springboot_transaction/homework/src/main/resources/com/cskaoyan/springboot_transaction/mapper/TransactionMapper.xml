<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cskaoyan.springboot_transaction.mapper.TransactionMapper">
    <update id="updateAmount">
        UPDATE count SET amount = amount + #{wage} WHERE name = #{name}
    </update>
</mapper>